<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoPanMobile.Views.DetallesPage"
             xmlns:local="clr-namespace:ProyectoPanMobile.ViewModels"
             xmlns:models="clr-namespace:ProyectoPanMobile.Models"
             Title="DetallesPage">
    <VerticalStackLayout>
        <Image Source="{Binding imagensource}" HeightRequest="150"/>
        <Label 
            Text="{Binding pan.NombrePan}" FontAttributes="Bold" FontSize="Title"
            HorizontalOptions="Center" />
        
        <Label Text="{Binding pan.Precio}" FontAttributes="Bold" FontSize="Medium"/>

        <Label Text="{Binding pan.Descripcion}" FontSize="Medium"/>

        <Button Text="Agregar"
                x:Name="BtnAgregar"
                FontSize="Subtitle"
                CornerRadius="13"
                HorizontalOptions="Center"
                Margin="5"
                Padding="16,0"
                BorderWidth="1"
                BorderColor="{AppThemeBinding Light={StaticResource Transparente}, Dark={StaticResource SBlanco}}"/>
    </VerticalStackLayout>
</ContentPage>