<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoPanMobile.Views.Carrito"
             Title="Carrito">
    <ScrollView>
        <VerticalStackLayout Padding="10,5" 
                         Spacing="17"
                         Margin="17">

            <Label Text="Lista de compras"
               FontSize="Title"
               HorizontalTextAlignment="Start" />

            <Button Text="Ir a pagar"
                x:Name="BtnComprar"
                
                FontSize="Subtitle"
                CornerRadius="13"
                HorizontalOptions="Center"
                Margin="5"
                Padding="16,0"
                BorderWidth="1"
                BorderColor="{AppThemeBinding Light={StaticResource Transparente}, Dark={StaticResource SBlanco}}"/>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>