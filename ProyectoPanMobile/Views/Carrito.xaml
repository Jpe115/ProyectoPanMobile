<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoPanMobile.Views.Carrito"
             xmlns:local="clr-namespace:ProyectoPanMobile.ViewModels"
             xmlns:models="clr-namespace:ProyectoPanMobile.Models"
             x:DataType="local:CarritoViewModel"
             Title="Carrito de pasteles">

    <ContentPage.ToolbarItems>
        <ToolbarItem 
            x:Name="PagarCarrito" 
            Text="Pagar" 
            IconImageSource="pago.png" 
            Order="Primary"
            Clicked="Pagar" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <CollectionView ItemsSource="{Binding panesList}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:PanesCarrito">
                    <Frame BackgroundColor="{AppThemeBinding Dark={StaticResource Gray600}, Light={StaticResource Gray100}}" BorderColor="{AppThemeBinding Light={StaticResource Transparente}}"  
                               CornerRadius="21" Margin="8,3,8,0">
                        <Grid ColumnDefinitions="170,*,*,*" RowDefinitions="60,30,30">

                            <Image Grid.Column="0" Grid.RowSpan="3" Source="{Binding Imagen}" HeightRequest="90" WidthRequest="150" 
                                   MaximumHeightRequest="90" MaximumWidthRequest="150"/>
                            
                            <Label Grid.ColumnSpan="4" HorizontalTextAlignment="Center" Grid.Row="0" Text="{Binding NombrePan}" VerticalTextAlignment="End" FontAttributes="Bold" FontSize="Medium"/>
                            
                            <Label Grid.Column="1" Grid.Row="1" Text="{Binding Precio,StringFormat='${0}'}" FontSize="Medium"/>

                            <Button x:DataType="local:CarritoViewModel" Grid.Column="1" Grid.Row="2" Text="-" FontSize="Medium" Padding="0" Command="{Binding MenosCommand}" VerticalOptions="Center"/>

                            <Label Grid.Column="2" Grid.Row="2" Text="{Binding Cantidad}" HorizontalTextAlignment="Center" VerticalOptions="Center" FontSize="Medium"/>

                            <Button x:DataType="local:CarritoViewModel" Grid.Column="3" Grid.Row="2" Text="+" FontSize="Medium" Padding="0" Command="{Binding PlusCommand}" VerticalOptions="Center"/>
                        </Grid>

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={x:RelativeSource AncestorType={x:Type local:CarritoViewModel}}, Path=DetallesDelPanCommand}" CommandParameter="{Binding .  }"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>
</ContentPage>