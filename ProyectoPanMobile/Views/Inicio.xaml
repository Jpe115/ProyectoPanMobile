<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoPanMobile.Views.Inicio"
             xmlns:local="clr-namespace:ProyectoPanMobile.ViewModels"
             xmlns:models="clr-namespace:ProyectoPanMobile.Models"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui">

    <Page.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="{AppThemeBinding Dark={StaticResource Black}, Light={StaticResource Primary}}"
                               StatusBarStyle="LightContent"/>
    </Page.Behaviors>

    
    
    <ContentPage.ToolbarItems>
        <ToolbarItem 
            x:Name="Cart" 
            Text="Carrito" 
            IconImageSource="carrito.svg" 
            Order="Primary"
            Priority="2"
            Command="{Binding CartCommand}"/>
        <ToolbarItem 
            x:Name="Find"
            Text="Buscar"
            IconImageSource="search.png"
            Priority="0"/>
    </ContentPage.ToolbarItems>

    <RefreshView x:DataType="local:InicioViewModel" Command="{Binding CargarPanesCommand}">
        <VerticalStackLayout>
            <CollectionView ItemsSource="{Binding panesList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Panes">
                        <HorizontalStackLayout BackgroundColor="{AppThemeBinding Dark={StaticResource Gray500},Light={StaticResource Gray100}}" Margin="10" Spacing="20">

                            <Label Text="{Binding NombrePan}" FontAttributes="Bold" FontSize="Subtitle"/>
                            <Label Text="{Binding Precio}"/>
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </RefreshView>
    
    
</ContentPage>