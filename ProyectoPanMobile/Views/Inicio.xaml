<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoPanMobile.Views.Inicio"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui" 
             >

    <Page.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="{AppThemeBinding Dark={StaticResource Black}, Light={StaticResource SAzul}}"
                               StatusBarStyle="LightContent"/>
    </Page.Behaviors>

    
    
    <ContentPage.ToolbarItems>
        <ToolbarItem 
            x:Name="Cart" 
            Text="Carrito" 
            IconImageSource="carrito.svg" 
            Order="Primary"
            Priority="2"/>
        <ToolbarItem 
            x:Name="Find"
            Text="Buscar"
            IconImageSource="find.svg"
            Priority="0"/>
    </ContentPage.ToolbarItems>

    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Cerrar sesion" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>